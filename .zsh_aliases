function cmd_success() {
	say "Done"
}

function cmd_failure() {
	say "Failure"
}


function docker_compose_override() {
	case $1 in
   		build|up)
   			docker-compose $@ && cmd_success || cmd_failure;;
  		*)
    		command docker-compose "$@";;
	esac

}

alias docker-compose=docker_compose_override
