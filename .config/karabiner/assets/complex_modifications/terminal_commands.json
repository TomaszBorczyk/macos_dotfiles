{
   "title":"terminal commands",
   "rules":[
      {
         "description":"override common commands",
         "manipulators":[
            {
               "type":"frontmost_application_if",
               "from":{
                  "modifiers":{
                     "mandatory":[
                        "left_command"
                     ]
                  },
                  "key_code":"r"
               },
               "conditions":[
                  {
                     "type":"frontmost_application_if",
                     "bundle_identifiers":[
                        "net.kovidgoyal.kitty",
                        "com.apple.Terminal"
                     ]
                  }
               ],
               "to":[
                  {
                     "repeat":false,
                     "key_code":"r",
                     "modifiers":[
                        "left_control"
                     ]
                  }
               ]
            },
            {
               "type":"basic",
               "from":{
                  "modifiers":{
                     "mandatory":[
                        "left_command"
                     ]
                  },
                  "key_code":"c"
               },
               "conditions":[
                  {
                     "type":"frontmost_application_if",
                     "bundle_identifiers":[
                        "net.kovidgoyal.kitty",
                        "com.apple.Terminal"
                     ]
                  }
               ],
               "to":[
                  {
                     "repeat":false,
                     "key_code":"c",
                     "modifiers":[
                        "left_control"
                     ]
                  }
               ]
            },
            {
               "type":"basic",
               "from":{
                  "modifiers":{
                     "mandatory":[
                        "left_command"
                     ]
                  },
                  "key_code":"w"
               },
               "conditions":[
                  {
                     "type":"frontmost_application_if",
                     "bundle_identifiers":[
                        "net.kovidgoyal.kitty",
                        "com.apple.Terminal"
                     ]
                  }
               ],
               "to":[
                  {
                     "repeat":false,
                     "key_code":"w",
                     "modifiers":[
                        "left_control"
                     ]
                  }
               ]
            },
            {
               "type":"basic",
               "from":{
                  "modifiers":{
                     "mandatory":[
                        "left_command",
                        "left_shift"
                     ]
                  },
                  "key_code":"c"
               },
               "conditions":[
                  {
                     "type":"frontmost_application_if",
                     "bundle_identifiers":[
                        "net.kovidgoyal.kitty",
                        "com.apple.Terminal"
                     ]
                  }
               ],
               "to":[
                  {
                     "repeat":false,
                     "key_code":"c",
                     "modifiers":[
                        "left_command"
                     ]
                  }
               ]
            }
         ]
      }
   ]
}
